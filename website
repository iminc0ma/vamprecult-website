<script>
// NAVIGATION
document.querySelectorAll('.nav-link').forEach(link=>{link.addEventListener('click',()=>{
document.querySelectorAll('.nav-link').forEach(l=>l.classList.remove('active'));
link.classList.add('active');
document.querySelectorAll('.section').forEach(s=>s.classList.remove('active'));
document.getElementById(link.dataset.section).classList.add('active');
});});

// SUBSCRIPTION FORM
const form=document.getElementById('subForm');
form.addEventListener('submit',e=>{
e.preventDefault();
showToast('Subscription noted! Please complete payment via IBAN.');
form.reset();
});
function showToast(msg){const t=document.getElementById('toast');t.textContent=msg;t.classList.add('show');setTimeout(()=>t.classList.remove('show'),3000);}

// IBAN COPY
function copyIBAN(){const t=document.getElementById('ibanText');navigator.clipboard.writeText(t.textContent).then(()=>showToast('IBAN copied!'));
}

// EXCLUSIVE CONTENT PLACEHOLDER
const exclusiveContent=[
{icon:'ðŸ–¤',title:'Dark Portrait',desc:'Exclusive gothic digital artwork'},
{icon:'ðŸ¦‡',title:'Night Stalker',desc:'Subscriber-only vampire illustration'}
];
const exDiv=document.getElementById('exclusiveContent');
exclusiveContent.forEach(item=>{
const div=document.createElement('div');div.className='exclusive-item';div.innerHTML=`<div class='exclusive-icon'>${item.icon}</div><h4 class='exclusive-title'>${item.title}</h4><p class='exclusive-description'>${item.desc}</p>`;
exDiv.appendChild(div);
});
</script>
